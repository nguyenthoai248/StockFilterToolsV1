<Window x:Class="StockFilterToolsV1.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bộ lọc dữ liệu" Height="250" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- DK1 -->
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Doanh số thuần > (%):"/>
        <TextBox x:Name="txtDoanhSoThuan" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- DK2 -->
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="EPS > (%):"/>
        <TextBox x:Name="txtEPS" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- DK3 -->
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Lợi nhuận sau thuế > (%):"/>
        <TextBox x:Name="txtLoiNhuan" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!-- DK4 -->
        <CheckBox x:Name="chkDK4" Grid.Row="3" Grid.Column="1" Content="Biên lãi gộp tăng so với quý cùng kỳ" Margin="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Áp dụng" Width="80" Margin="5" Click="Apply_Click"/>
            <Button Content="Hủy" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

